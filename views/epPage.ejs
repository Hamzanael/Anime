<section class="epPage">
    <div class="container">
        <h1 style="text-align: center; margin: 1.5rem;color: white; " ><%=ep.discribtion %> </h1>
        <div class=" row"> 
            <div class="col-lg-6" style="text-align: center;">
                <ul class="pagination justify-content-center">
                    <li class="page-item" style="margin-right: 1rem;">
                        <a class="page-link" style="background-color: red;color: white;border-radius: 50px;border: none;" href=<%= ep.server1 %> 
                            onclick="return loadIframe('ifrm', this.href);"> <i class="fab fa-maxcdn" style="padding-right: 1rem;"></i> Server 1</a>
                    </li>
                    <li class="page-item" style="margin-left: 1rem;">
                        <a class="page-link" style="color: red; background-color: white;border-radius: 50px;border: none;" href=<%= ep.server2 %>
                            onclick="return loadIframe('ifrm', this.href);"> <i style="padding-right: 1rem;"
                            class="fab fa-google-drive"></i> Server 2</a>
                    </li>
                </ul>
                <div class="iframe">
                    <iframe name="ifrm" id="ifrm" src=<%=ep.server1 %>
                        style="width:100%;height: 300px;" frameborder="0">
                        Your browser doesn't support iframes.
                    </iframe>
                </div>

                
                    <a class="btn btn-dark " href=" href=<%= ep.link1 %>"  role="button" id="dropdownMenuLink" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false" style="padding:1rem;margin-top: 1rem;margin-bottom: 1rem;font-size: 1.5rem;">
                        <i class="fas fa-download"></i> تحميل الحلقه
                    </a>

                   
                
            </div>

            <div class="col-lg-6" style="text-align: center;">
                <h1 ><a href="/animePage/<%= Anime.title %>" style="color: white;"><%= Anime.title %> </a></h1>
                <div class="list-group" style="text-align: right;">
                    <% Anime.EP.forEach(element => { %>
                    <a href="/epPgae/<%= Anime.title %>/<%=element.epNumber%>" class="list-group-item list-group-item-action" id=<%=element.epNumber%> ><i class="fas fa-play icon-view "></i> <%= element.epNumber %>  الحلقه </a>
                    <% }) %>
                  </div>

            </div>

        </div>

    </div>




</section>














