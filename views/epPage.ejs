<script>
    function loadIframe(iframeName, url) {
        var $iframe = $('#' + iframeName);
        if ($iframe.length) {
            $iframe.attr('src', url);
            return false;
        }
        return true;
    }


    $(function(){
       $("#<%=ep.epNumber%>").addClass("active");
    });
</script>